
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
          crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

</head>

<h2>Login</h2>

<div style="width:500px; margin: 0 auto; text-align:center; background-color: #f2f2f2; border: 1px solid #ddd; padding: 20px;">
    <form method="post" style="display:inline-block;">

        <label style="display:block; margin-bottom:10px; font-weight:bold; font-size: 1.2em;">Enter Username</label>
        <input type="text" name="uname" class="form-control" style="width:100%; margin-bottom:10px; border-radius:5px; padding: 5px;" />
        <label style="display:block; margin-bottom:10px; font-weight:bold; font-size: 1.2em;">Enter Password</label>
        <input type="password" name="pwd" class="form-control" style="width:100%; margin-bottom:10px; border-radius:5px; padding: 5px;" />
        <input type="submit" value="Login" class="btn btn-primary" style="border-radius:5px; padding: 5px 10px; background-color:#337ab7; border-color:#2e6da4;" />
        <a href="Registrations" class="btn btn-info" style="display:block; margin-top:10px; border-radius:5px; padding: 5px 10px; background-color:#5bc0de; border-color:#46b8da;">New User? click Here</a>

    </form>
</div>


