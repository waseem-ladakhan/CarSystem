<div class="row" style="margin-top:100px">


    @foreach (var item in Model)
    {
        <div class="col-sm-4">

            <div class="card">
                <img src="~/@item.Image" height="200" width="200">
                <div class="container">

                    <div>Car Name: @item.carName</div>
                    <div>Colour:@item.Color</div>
                    <div>Price per day: @item.RentPerDay</div>
                    <div>AC or Non AC:@item.Conditioner</div>
                    <div>Fuel Type:@item.Fuletype</div>
                    <div>Capacity:@item.capacity</div>
                    <div>Status of the Car:@item.CarStatus</div>
                    <div>Vehicle Number:@item.RegistrationId</div>
                    <div>
                        @Html.ActionLink("Update", "UpdateCar", new
                        {@*cid = item.carid*@
cname = item.carName,
RentPerDay = item.RentPerDay,
Condition = item.Conditioner,
Type = item.Fuletype,
image = item.Image,
Capacity = item.capacity,
registration = item.RegistrationId,
status = item.CarStatus,
model = item.Model,
color = item.Color
},
new { @class = "btn btn-primary" })
                        <div>
                            @Html.ActionLink("Delete", "DeleteCar", new { carID = item.RegistrationId }, new { @class = "btn btn-primary" })
                        </div>
                    </div>

                    <div>

                    </div>
                </div>
            </div>
        </div>

    }
